#!/bin/bash

pushd `dirname $0` > /dev/null
BIN_DIR=`pwd`
popd > /dev/null

git config --global status-tree.indent 4
git config --global alias.tree "!sh -c \"$BIN_DIR/git-status-tree \\\"\\\$@\\\"\" --"
echo '#############################'
echo '# "git tree" has been added #'
echo '# Run: git tree             #'
echo '#############################'
